root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8
indent_style = space

# 4 space indentation for python
[*.py]
indent_size = 4

# 2 space indentation for js and vue files
[*.{js,vue}]
indent_style = space
indent_size = 2
